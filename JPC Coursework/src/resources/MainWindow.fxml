<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="4.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane fx:id="grid" gridLinesVisible="true" prefHeight="300.0" prefWidth="300.0" styleClass="grid" VBox.vgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
      <Button mnemonicParsing="false" onAction="#upPressed" prefWidth="60.0" styleClass="directionButton" text="Up" />
      <HBox alignment="CENTER" fillHeight="false" spacing="4.0">
         <children>
            <Button mnemonicParsing="false" onAction="#leftPressed" prefWidth="60.0" styleClass="directionButton" text="Left" />
            <Button mnemonicParsing="false" onAction="#rightPressed" prefWidth="60.0" styleClass="directionButton" text="Right" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#downPressed" prefWidth="60.0" styleClass="directionButton" text="Down" />
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
